<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical"
        tools:context=".ui.detail.DetailItemActivity">

    <ImageView android:id="@+id/imgItem" android:layout_width="80dp" android:layout_height="80dp"
               android:layout_marginRight="16dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_toRightOf="@id/imgItem" android:id="@+id/tvPrice"/>

</RelativeLayout>